%h1 Capitalisation results
%p Selected board: #{@board_name}
%p Selected lists: #{@list_names}
%p Selected time period: #{@time_period}

%table
	%thead
	%tr
	%th List
	%th Name
	%th Members
	%th URL
	%th Archived?
	%th Last modified	

	%tbody
	- @card_details.each do | card_detail |
		%tr
			%td= card_detail[:list] 
			%td= card_detail[:name] 
			%td= card_detail[:members] 
			%td= link_to card_detail[:url], card_detail[:url], target: "_blank"
			%td= card_detail[:archived] 
			%td= l card_detail[:last_modified] 															

= render :partial => "form"
